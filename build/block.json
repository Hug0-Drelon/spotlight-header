{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "hd/spotlight-header",
  "version": "0.1.0",
  "title": "Spotlight Header",
  "category": "layout",
  "icon": "lightbulb",
  "description": "Header with neat spotlight effect.",
  "example": {},
  "supports": {
    "html": false,
    "align": true,
    "innerBlocks": true
  },
  "attributes": {
    "mediaId": {
      "type": "number",
      "default": 0
    },
    "mediaUrl": {
      "type": "string",
      "default": ""
    },
    "align": {
      "type": "string",
      "default": "full"
    },
    "allowedBlocks": {
      "type": "array"
    }
  },
  "textdomain": "spotlight-header",
  "editorScript": "file:./index.js",
  "style": "file:./style-index.css",
  "viewScript": "file:./view.js"
}